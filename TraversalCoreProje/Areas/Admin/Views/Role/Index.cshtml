@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>@item.Id</tr>
        <tr>@item.Name</tr>
        <tr><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></tr>
        <tr><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Güncelle</a></tr>
    }
</table>

<a href="/Admin/Role/AddRole" class="btn btn-outline-primary">Yeni Rol Ekle</a>
