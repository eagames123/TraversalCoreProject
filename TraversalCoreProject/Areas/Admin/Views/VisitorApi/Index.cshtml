@model List<TraversalCoreProject.Areas.Admin.Models.VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api Ziyaretçi Bilgisi</h1>

<table class="table table-bordered">
    <tr>
        <td>VisitorId</td>
        <td>Name</td>
        <td>Surname</td>
        <td>Mail</td>
        <td>City</td>
        <td>Country</td>
        <th>Sil</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.VisitorId</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Mail</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorId/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorId/" class="btn btn-outline-dark">Mesajı Aç</a></td>
        </tr>
    }
</table>
<hr />
