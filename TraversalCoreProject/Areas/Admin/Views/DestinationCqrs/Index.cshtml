@model List<TraversalCoreProject.CQRS.Results.DestinationResults.GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Tur Rotaları CQRS Verileri / </span> Rotalar</h4>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Gün Gece</th>
        <th>Sitede Gör</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.City</td>
            <td>@item.Price ₺</td>
            <td>@item.Capacity</td>
            <td>@item.Daynight</td>
            <td><a href="/Destination/DestinationDetails/@item.id" class="btn btn-outline-info">Sitede Gör</a></td>
            <td><a href="/Admin/DestinationCqrs/DeleteDestination/@item.id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/DestinationCqrs/GetDestination/@item.id" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<br/>
<a href="/Admin/DestinationCqrs/AddDestination" class="btn btn-outline-primary">Yeni Tur Rotası Ekle</a>
