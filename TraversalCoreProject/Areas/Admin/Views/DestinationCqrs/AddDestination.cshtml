@model TraversalCoreProject.CQRS.Commands.DestinationCommands.CreateDestinationCommand
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Yeni Rota Oluşturma Sayfası CQRS / </span> Rotalar</h4>
<form method="post">
    
    <div class="form-group">
        @Html.Label("Şehir")
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Gün Gece")
        <input type="text" asp-for="DayNight" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <br/>
    <div class="form-group">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" class="form-control" />
    </div>
    <br/>
    <button class="btn btn-outline-primary"> Ekle</button>
</form>
<br />
<a href="/Admin/DestinationCqrs/AddDestination" class="btn btn-outline-primary">Yeni Tur Rotası Ekle</a>
