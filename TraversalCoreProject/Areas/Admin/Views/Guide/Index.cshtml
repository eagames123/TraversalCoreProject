@model List<Guide>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Rehber Listesi </span> / Rehberlerimiz</h4>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GuideId</td>
            <td><img src="@item.Image" width="50" height="50" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                @if (@item.Status == true)
                {
                    <span><a href="/Admin/Guide/ChangeToFalse/@item.GuideId" class="btn btn-outline-warning">Pasif Yap</a></span>
                }
                else
                {
                    <span><a href="/Admin/Guide/ChangeToTrue/@item.GuideId" class="btn btn-outline-info">Aktif Yap</a></span>
                }
            </td>
            <td><a href="/Admin/Guide/EditGuide/@item.GuideId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Admin/Guide/AddGuide" class="btn btn-outline-primary">Yeni Rehber Ekle</a>
